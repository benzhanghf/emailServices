{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./src/*"
            ]
        },
        "types": [
            "@types/node",
            "@types/jest"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}